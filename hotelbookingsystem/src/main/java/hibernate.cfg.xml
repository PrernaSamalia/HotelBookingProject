<!DOCTYPE hibernate-configuration PUBLIC
		"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
		"https://hibernate.org/dtd/hibernate-configuration-3.0.dtd">


<hibernate-configuration>

	<session-factory>
	
	
	<!-- Database connection properties - Driver, URL, user, password -->
		<property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
		<property name="hibernate.connection.url">jdbc:mysql://localhost:3306/hbs</property>
		<property name="hibernate.connection.username">root</property>
		<property name="hibernate.connection.password">Ganga@422002!</property>
	
	
		<property name="hbm2ddl.auto">update</property>
		<property name="dialect">org.hibernate.dialect.MySQL8Dialect</property>
		<property name="show_sql">true</property>
	
	<!-- Mapping model/entity class having annotations   -->
	
		<mapping  class="com.hexaware.hotelbookingsystem.entity.Users"  />
		<mapping  class="com.hexaware.hotelbookingsystem.entity.Rooms"  /> 
		<mapping  class="com.hexaware.hotelbookingsystem.entity.Hotels"  />
		<mapping  class="com.hexaware.hotelbookingsystem.entity.Payments"  />
		<mapping  class="com.hexaware.hotelbookingsystem.entity.Bookings"  />
		<mapping  class="com.hexaware.hotelbookingsystem.entity.Reviews"  />  
		
	

	</session-factory>


</hibernate-configuration>		
		
		
		